@using TripsLog.Models;
@model TripLog
@{
    ViewData["Title"] = "Add Trip - Page-1";
}

<div class="container">
    <form  asp-action="AddTripTwo" method="post">
        <div class="row">
            <div class="col-md-12">
                <label for="Destination">Destination</label>
                    @Html.TextBoxFor(model => model.Destination, new {@class = "form-control"})
                </div>
            </div>

        <div class="form-group mt-2">
            <label for="Accommodations">Accommodations</label>
            @Html.TextBoxFor(model => model.Accommodations, new {@class = "form-control"})
        </div>

        <div class="form-group mt-2">
            <label for="StartDate">Start Date</label>
            @Html.TextBoxFor(model => model.StartDate, new { @type="date", @class = "form-control datepicker",  @Value = Model.StartDate.ToString("yyyy-MM-dd") } )
        </div>

        <div class="form-group mt-2">
            <label for="EndDate">End Date</label>
            @Html.TextBoxFor(model => model.EndDate, new { @type="date", @class = "form-control datepicker",  @Value = Model.EndDate.ToString("yyyy-MM-dd") } )    
        </div>
    
        <div class="container mt-3">
            <button type="submit" class="btn btn-secondary" asp-controller="Home" asp-action="AddTripTwo">Next</button>
            <button type="submit" class="btn btn-light border-1 border-dark" asp-area="" asp-controller="Home" asp-action="Index">Cancel</button>
        </div>
    </form>
</div>



    <script src="https://code.jquery.com/jquery-3.6.0.min.js" ></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />
<script>

    $(function () {
        $(".csdatePicker").datepicker({ changeMonth: true, changeYear: true, yearRange: "-100:+0" });
        $(".csdatePicker").datepicker("option", "dateFormat", "dd-M-yy");
    });
</script>


