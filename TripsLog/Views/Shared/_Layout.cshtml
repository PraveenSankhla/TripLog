<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TripsLog.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="card bg-secondary pb-4 pt-4 text-white d-flex flex-row justify-content-center align-content-center">
            <h1>&nbsp; My Trip Log</h1>
        </div>
        <div class="m-1 mt-2 "><h4>@ViewData["SubHeading"]</h4></div>
        @RenderBody()
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>